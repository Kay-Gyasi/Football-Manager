@model UserModel

@{
    ViewData["Title"] = "Home Page";
}

<partial name="_LayoutHeader"/>

<div class="container mt-3 mb-5">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-12 mt-0 m-auto col-lg-4">

                    <!-- Begin::Side view -->
                    <div class="card w-100">
                        @if (Model.Player is not null)
                        {
                            <img src="https://hips.hearstapps.com/hmg-prod/images/gettyimages-972635212.jpg"/>
                        }
                        else
                        {
                            <img src="https://cdn.pixabay.com/photo/2018/12/16/16/39/sport-3878835__340.jpg" />
                        }
                        <div class="card-img-top" alt="GOAT">
                            @if (Model.Coach is null)
                            {
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <b>
                                            @Model.Player?.User?.FirstName
                                            @Model.Player?.User?.LastName
                                        </b>
                                    </h5>
                                    <p class="card-text">Player of @Model.Player?.Team?.Name</p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">Phone: <i>@Model.Player?.User?.PhoneNumber</i></li>
                                    <li class="list-group-item">Email: <i>@Model.Player?.User?.Email</i></li>
                                </ul>
                            }
                            else
                            {
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <b>
                                            @Model.Coach?.User?.FirstName
                                            @Model.Coach?.User?.LastName
                                        </b>
                                    </h5>
                                    <p class="card-text">Coach of @Model.Coach?.Team?.Name</p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">Phone: <i>@Model.Coach?.User?.PhoneNumber</i></li>
                                    <li class="list-group-item">Email: <i>@Model.Coach?.User?.Email</i></li>
                                </ul>
                            }
                        </div>
                    </div>
                    <!-- End::Side view -->
                </div>
                <div class="col-12 col-lg-8 mt-5 mt-lg-0">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home"
                               asp-action="Index">View Info</a>
                        </li>
                        @if (User.FindFirst("role")?.Value == "Player")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home"
                                   asp-action="EditPlayer">Edit Info</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" asp-controller="Home"
                                   asp-action="CreatePlayer">Add Player</a>
                            </li>
                        }
                    </ul>
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="card-title"><strong>Personal</strong></div>
                            <div class="row">
                                <div class="col-12 col-lg-6">
                                    <div class="card">
                                        <div class="card-body">
                                            @if (Model.Player is null)
                                            {
                                                <div class="row">

                                                    <div class="col-4">
                                                        Username:
                                                    </div>
                                                    <div class="col-8">
                                                        <b>@Model.Coach?.User?.UserName</b>
                                                    </div>
                                                </div>
                                                <div class="row mt-4">
                                                    <div class="col-4">
                                                        Firstname:
                                                    </div>
                                                    <div class="col-8">
                                                        <b>@Model.Coach?.User?.FirstName</b>
                                                    </div>
                                                </div>
                                                <div class="row mt-4">
                                                    <div class="col-4">
                                                        Lastname:
                                                    </div>
                                                    <div class="col-8">
                                                        <b>@Model.Coach?.User?.LastName</b>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="row">

                                                    <div class="col-4">
                                                        Username:
                                                    </div>
                                                    <div class="col-8">
                                                        <b>@Model.Player?.User?.UserName</b>
                                                    </div>
                                                </div>
                                                <div class="row mt-4">
                                                    <div class="col-4">
                                                        Firstname:
                                                    </div>
                                                    <div class="col-8">
                                                        <b>@Model.Player?.User?.FirstName</b>
                                                    </div>
                                                </div>
                                                <div class="row mt-4">
                                                    <div class="col-4">
                                                        Lastname:
                                                    </div>
                                                    <div class="col-8">
                                                        <b>@Model.Player?.User?.LastName</b>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6 mt-3 mt-lg-0">
                                    <div class="card">
                                        <div class="card-body">
                                            @if(Model.Player is null)
                                            {
                                                <div class="row">
                                                    <div class="col-4">
                                                        Email:
                                                    </div>
                                                    <div class="col-8">
                                                        <b>@Model.Coach?.User?.Email</b>
                                                    </div>
                                                </div>
                                                <div class="row mt-4">
                                                    <div class="col-4">
                                                        Phone Number:
                                                    </div>
                                                    <div class="col-8">
                                                        <b>@Model.Coach?.User?.PhoneNumber</b>
                                                    </div>
                                                </div>
                                                <div class="row mt-4">
                                                    <div class="col-4">
                                                        Date of birth:
                                                    </div>
                                                    <div class="col-8">
                                                        <b>@Model.Coach?.User?.DateOfBirth.Value.ToShortDateString()</b>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="row">
                                                    <div class="col-4">
                                                        Email:
                                                    </div>
                                                    <div class="col-8">
                                                        <b>@Model.Player?.User?.Email</b>
                                                    </div>
                                                </div>
                                                <div class="row mt-4">
                                                    <div class="col-4">
                                                        Phone Number:
                                                    </div>
                                                    <div class="col-8">
                                                        <b>@Model.Player?.User?.PhoneNumber</b>
                                                    </div>
                                                </div>
                                                <div class="row mt-4">
                                                    <div class="col-4">
                                                        Date of birth:
                                                    </div>
                                                    <div class="col-8">
                                                        <b>@Model.Player?.User?.DateOfBirth.Value.ToShortDateString()</b>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="card-title"><strong>Professional</strong></div>
                            <div class="row">
                                @if (User.FindFirst("role")?.Value == "Coach")
                                {
                                    <div class="col-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-6">
                                                        Years of experience:
                                                    </div>
                                                    <div class="col-6">
                                                        <b>13</b>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }
                                else
                                {
                                    <div class="col-12 col-lg-6">
                                        <div class="card">
                                            <div class="card-body">
                                                @if(Model.Coach is null)
                                                {
                                                    <div class="row">
                                                        <div class="col-6">
                                                            Nationality:
                                                        </div>
                                                        <div class="col-6">
                                                            <b>@Model.Player?.Nationality.ToString()</b>
                                                        </div>
                                                    </div>
                                                    <div class="row mt-4">
                                                        <div class="col-6">
                                                            Primary Position:
                                                        </div>
                                                        <div class="col-6">
                                                            <b>@Enum.GetName(typeof(Position), Model.Player?.PrimaryPosition)</b>
                                                        </div>
                                                    </div>
                                                    if (!string.IsNullOrEmpty(Model.Player?.SecondaryPosition.ToString()))
                                                    {
                                                        <div class="row mt-4">
                                                            <div class="col-6">
                                                                Secondary Position:
                                                            </div>
                                                            <div class="col-6">
                                                                <b>@Model.Player?.SecondaryPosition.ToString()</b>
                                                            </div>
                                                        </div>
                                                    }
                                                }
                                                
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-6 mt-3 mt-lg-0">
                                        <div class="card">
                                            <div class="card-body">
                                                @if(Model.Coach is null)
                                                {
                                                    <div class="row">
                                                        <div class="col-6">
                                                            Jersey Name:
                                                        </div>
                                                        <div class="col-6">
                                                            <b>@Model.Player?.JerseyName</b>
                                                        </div>
                                                    </div>
                                                    <div class="row mt-4">
                                                        <div class="col-6">
                                                            Squad Number:
                                                        </div>
                                                        <div class="col-6">
                                                            <b>@Model.Player?.JerseyNumber</b>
                                                        </div>
                                                    </div>
                                                }
                                                
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <div class="card-title"><strong>Team</strong></div>
                            <div class="col-12 col-lg-6">
                                <div class="card">
                                    <div class="card-body">
                                        @if(Model.Coach is null)
                                        {
                                            <div class="row">
                                                <div class="col-6">
                                                    Name:
                                                </div>
                                                <div class="col-6">
                                                    <b>@Model.Player?.Team?.Name</b>
                                                </div>
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-6">
                                                    Stadium Name:
                                                </div>
                                                <div class="col-6">
                                                    <b>@Model.Player?.Team?.StadiumName</b>
                                                </div>
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-6">
                                                    Date Established:
                                                </div>
                                                <div class="col-6">
                                                    <b>@Model.Player?.Team?.EstablishmentDate.ToShortDateString()</b>
                                                </div>
                                            </div>
                                        }

                                        else
                                        {
                                            <div class="row">
                                                <div class="col-6">
                                                    Name:
                                                </div>
                                                <div class="col-6">
                                                    <b>@Model.Coach?.Team?.Name</b>
                                                </div>
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-6">
                                                    Stadium Name:
                                                </div>
                                                <div class="col-6">
                                                    <b>@Model.Coach?.Team?.StadiumName</b>
                                                </div>
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-6">
                                                    Date Established:
                                                </div>
                                                <div class="col-6">
                                                    <b>@Model.Coach?.Team?.EstablishmentDate.ToShortDateString()</b>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a asp-controller="Home" asp-action="EditPlayer" class="btn btn-primary mt-3 w-100">Edit info</a>
                </div>

            </div>
        </div>
    </div>
    </div>
<partial name="_LayoutFooter" />